<div class="container new_form">
<h1>Create a record</h1>

<%= simple_form_for(@record) do |f| %>
  <%= f.input :disease%>
  <%= f.input :notes %>
  <%= f.input :medication %>
  <%= f.input :date, :label => "Doctors visit date" %>
  <%# <%= f.input :image, as: :file, label: "Image of house" %>

  <%= f.simple_fields_for :symptom do |p| %>
    <%= p.input :symptoms, :as => :select, :collection => Symptom.all, as: :check_boxes  %>
  <% end %>

  <%= f.button :submit, "Submit" ,class:"btn btn-dark" %>
<% end %>
</div>
